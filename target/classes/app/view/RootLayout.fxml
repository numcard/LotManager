<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <Menu mnemonicParsing="false" text="Лоты">
                <MenuItem mnemonicParsing="false" onAction="#handleNewLots" text="Новые лоты">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#handleOpenLots" text="Открыть...">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#handleSaveLots" text="Сохранить">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#handleSaveLotsAs" text="Сохранить как...">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#handleAutoloadLots" text="Автозагрузка лотов"/>
                <MenuItem mnemonicParsing="false" onAction="#handleSell" text="Выставить"/>
                <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Закрыть"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Категории">
                <MenuItem mnemonicParsing="false" onAction="#handleNewCategory" text="Добавить"/>
                <MenuItem mnemonicParsing="false" onAction="#handleDeleteCategory" text="Удалить"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Дополнительно">
                <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="О программе">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
